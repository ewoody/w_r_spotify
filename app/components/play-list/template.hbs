<table class="ui very basic table">
  <thead>
  <tr>
    <th></th>
    <th>Track</th>
    <th>Artist</th>
    {{#if displayAlbum}}
      <th>Album</th>
    {{/if}}
  </tr>
  </thead>
  <tbody>
  {{#each model.tracks as |track|}}
    <tr>
      <td>
        {{#if track.previewUrl}}
          <button class="ui tiny icon button" {{action 'toggle' track}}>
          {{#if (eq currentTrackId track.id)}}
            {{#if playing}}
              <i class="pause icon"/>
            {{/if}}
          {{else}}
            <i class="play icon"/>
          {{/if}}
          </button>
        {{/if}}
      </td>
      <td>{{track.name}}</td>
      <td>
        {{#each track.artists as |artist|}}
          {{artist.name}}
        {{/each}}
      </td>
      {{#if displayAlbum}}
        <td>{{link-to track.album.name 'album' track.album.id}}</td>
      {{/if}}
    </tr>
  {{/each}}
  </tbody>
</table>
